<UserControl x:Class="CpuPowerManagement.Views.UserControls.CpuStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CpuPowerManagement.Views.UserControls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:userControls="clr-namespace:CpuPowerManagement.ViewModels.UserControls"
             xmlns:converters="clr-namespace:CpuPowerManagement.Converters"
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Background="{DynamicResource ApplicationBackgroundBrush}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <UserControl.DataContext>
    <userControls:CpuStatusViewModel />
  </UserControl.DataContext>
  <UserControl.Resources>
    <converters:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
  </UserControl.Resources>
  <StackPanel Orientation="Vertical">
    <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <!-- Core Thermal Status -->
    <TextBlock Grid.Row="0" Grid.Column="0" Text="Core Thermal Status:" VerticalAlignment="Center"/>
    <Ellipse Grid.Row="0" Grid.Column="1" Width="16" Height="16" Margin="5,0"
             Fill="{Binding CoreThermalData.ThermalStatus, Converter={StaticResource BoolToBrushConverter}}"
             Stroke="Black" StrokeThickness="1"/>

    <!-- Package Power Limit Status -->
    <TextBlock Grid.Row="1" Grid.Column="0" Text="Package Power Limit Status:" VerticalAlignment="Center"/>
    <Ellipse Grid.Row="1" Grid.Column="1" Width="16" Height="16" Margin="5,0"
             Fill="{Binding PackageThermalData.PowerLimitStatus, Converter={StaticResource BoolToBrushConverter}}"
             Stroke="Black" StrokeThickness="1"/>
  </Grid>

    <Grid Height="150">
      <wpf:CartesianChart Series="{Binding Series}" LegendLocation="Right" Margin="0,0,0,0">
        <wpf:CartesianChart.AxisX>
          <wpf:Axis Title="Time (s)" Labels="{Binding Labels}" />
        </wpf:CartesianChart.AxisX>
        <wpf:CartesianChart.AxisY>
          <wpf:Axis Title="Status (1=Throttling, 0=OK)" MinValue="0" MaxValue="1"/>
        </wpf:CartesianChart.AxisY>
      </wpf:CartesianChart>
    </Grid>

</StackPanel>
</UserControl>
