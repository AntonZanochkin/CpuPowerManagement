<Window x:Class="CpuPowerManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CpuPowerManagement" 
        xmlns:viewmodel="clr-namespace:CpuPowerManagement.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Window.DataContext>
    <viewmodel:MainViewModel />
  </Window.DataContext>
  <Grid>
      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
        <!-- Label to display Slider value -->
        <Label Content="{Binding PlLimit1}" FontSize="16" HorizontalAlignment="Center"/>

        <!-- Slider -->
        <Slider Minimum="1" Maximum="45" 
                Value="{Binding PlLimit1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                TickFrequency="1" IsSnapToTickEnabled="True"/>

        <Button Content="Apply Power Limit 1"
                Command="{Binding ApplyPlLimit1Command}"
                CommandParameter="{Binding PlLimit1}"
                Margin="10"/>
    </StackPanel>
  </Grid>
</Window>
